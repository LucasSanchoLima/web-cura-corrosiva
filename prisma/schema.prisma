generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            String     @id
  email         String     @unique
  emailCatarse  String     @unique
  tier          Int        @db.SmallInt
  config        Json
  mensagens     Mensagem[]
  criadoEm      DateTime   @default(now())
  atuallizadoEm DateTime   @updatedAt
  acesso        Acesso[]
}

model Acesso {
  id          Int          @id @default(autoincrement())
  usuarioId   String
  usuario     Usuario      @relation(fields: [usuarioId], references: [id])
  ip          String       @db.Inet
  dispositivo Dispositivos
  data        DateTime     @default(now())
}

enum Dispositivos {
  DESKTOP
  CELULAR
  TABLET
  OUTROS
}

model Mensagem {
  id        Int      @id @default(autoincrement())
  usuarioId String
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  direcao   Boolean
  conteudo  String
  data      DateTime @default(now())
}
